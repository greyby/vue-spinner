{
  "name": "vue-spinner",
  "version": "3.0.0",
  "description": "Spinners of Vue Components",
  "keywords": [
    "spinner",
    "vuejs",
    "vue3",
    "loading"
  ],
  "main": "dist/vue-spinner.umd.js",
  "module": "dist/vue-spinner.es.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/vue-spinner.es.js",
      "require": "./dist/vue-spinner.umd.js"
    }
  },
  "files": [
    "dist",
    "src",
    "types"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:demo": "vite build --config vite.demo.config.js",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/greyby/vue-spinner.git"
  },
  "author": "greyby",
  "peerDependencies": {
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.4",
    "@vue/test-utils": "^2.4.6",
    "happy-dom": "^20.6.1",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "vue": "^3.5.28"
  },
  "license": "MIT"
}